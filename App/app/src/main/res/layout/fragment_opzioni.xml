                app:layout_constraintTop_toTopOf="@+id/guideline2" />

            <TextView
                android:id="@+id/sounds"
                android:layout_width="58dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:text="@string/sounds"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/notifications"
                app:layout_constraintTop_toBottomOf="@+id/notifications" />

            <Switch
                android:id="@+id/sounds_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/sounds"
                app:layout_constraintEnd_toEndOf="@+id/notifications_switch"
                app:layout_constraintStart_toStartOf="@+id/notifications_switch"
