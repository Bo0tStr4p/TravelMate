            <TextView
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginTop="8dp"
                android:text="@string/rate"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
